<div class="container pb-3 pt-3 pt-md-3 pb-md-3 pt-lg-5 pb-lg-5  text-center">
  <h2 class="fs-1 fw-bold">{{ section.settings.hw_to_use_title }}</h2>
  <p class="fs-5 rfss-grey text-capitalize">{{ section.settings.hw_to_use_subtitle }}</p>

  <div class="pt-5">
      <div class="glide" id="how_to_use">
          <div class="glide__track" data-glide-el="track">
            <div class="glide__slides">

      {% capture vi %}1{% endcapture %}
      {% for block in section.blocks %}

        <div class="glide__slide">
          {% assign vi_val = vi | modulo: 2 %}
          {% if vi_val != 0  %}
            <div class="vi_{{ vi }} position-relative">
              <video autoplay="" loop="" class="mb-5 pb-4" muted=""><source src="{{ block.settings.hw_to_use_link }}" type="video/mp4"></video>
              <p class="v_line position-relative"></p>
              <h3 class="fs-5 fw-bold mt-0 mt-md-3">{{ block.settings.hw_to_use_step }}</h3>
              <p class="m-auto fs-5 w-75 rfss-grey">{{ block.settings.hw_to_use_det }}</p>
            </div>
          {% else %}
            <div class="vi_{{ vi }} position-relative hw-mobile d-block d-md-block d-lg-none">
              <video autoplay="" loop="" class="mb-5 pb-4 " muted=""><source src="{{ block.settings.hw_to_use_link }}" type="video/mp4"></video>
              <p class="v_line position-relative d-block d-md-block d-lg-none"></p>
              <h3 class="fs-5 fw-bold mt-0 mt-md-3">{{ block.settings.hw_to_use_step }}</h3>
              <p class="m-auto fs-5 rfss-grey w-75">{{ block.settings.hw_to_use_det }}</p>
            </div>
            <div class="vi_{{ vi }} position-relative hu-dektop d-none d-md-none d-lg-block">
              <h3 class="fs-5  fw-bold">{{ block.settings.hw_to_use_step }}</h3>
              <p class="m-auto fs-5 rfss-grey w-75">{{ block.settings.hw_to_use_det }}</p>
              <p class="v_line position-relative d-none d-md-none d-lg-block"></p>
              <video autoplay="" loop="" class="mt-5 pt-4" muted=""><source src="{{ block.settings.hw_to_use_link }}" type="video/mp4"></video>
            </div>
          {% endif %}

        </div>
        {% assign vi = vi | plus: 1 %}
      {% endfor %}

    </div>
  </div>
</div>
  </div>

</div>
{% stylesheet %}
  
{% endstylesheet %}
{% schema %}
  {
    "name": "how-to-use",
    "tag": "div",
    "class": "how_to_use_refresh bg-light pb-3 pt-3 pt-md-3 pb-md-3 pt-lg-5 pb-lg-5",
    "settings": [
      {
        "type": "text",
        "id": "hw_to_use_title",
        "label": "How to use title"
      }, {
        "type": "text",
        "id": "hw_to_use_subtitle",
        "label": "How to use sub title"
      }
    ],
    "blocks": [
      {
        "type": "how-to-use-steps",
        "name": "how-to-use-steps",
        "settings": [
          {
            "type": "url",
            "id": "hw_to_use_link",
            "label": "how to use video link"
          }, {
            "type": "text",
            "id": "hw_to_use_step",
            "label": "Step No"
          }, {
            "type": "textarea",
            "id": "hw_to_use_det",
            "label": "how to use detail"
          }
        ]
      }

    ]
  }
{% endschema %}
<script>
  if(document.querySelector("#how_to_use")){new Glide("#how_to_use",{type:"slider",bound:true,loop:false,perView:3,breakpoints:{0:{perView:1.3},300:{perView:1.3},600:{perView:1.3},800:{perView:2.3},1000:{perView:3}}}).mount();}
</script>
