                  <div class="d-flex pt-5 pb-5 ">
                    {% for block in section.blocks %}
                    <div class="preven-effect-pi {{ block.id }}" >
                        <h2>{{ block.settings.pe-percent}}</h2>
                        <small>{{ block.settings.pe-percent-det}}</small>
