            <img itemprop="image" class="lazy js" src="{{ section.settings.pe_before_image | img_url}}" data-src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ ration }}" data-sizes="auto" alt="{{ section.settings.pe_before_image.alt | default: shop.name | escape }}">
