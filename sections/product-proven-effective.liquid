{% schema %}
{
    "name" : "Proven-effective",
    "tag" : "section",
    "class": "proven-effective bg-light pt-5  pb-5",
    "settings" : [
      {
        "type" : "text" ,
        "id" : "pe-sub-title",
        "default" : "PROVEN EFFECTIVE",
        "label" : "User use case & description"
      },
      {
         "type"  : "textarea",
         "id" : "pe-description",
         "label" : "User use case & description"
      },
      {
        "type" : "image_picker",
        "id" : "pe_before_image" ,
        "label" : "Select Before Image"
      },
      {
        "type" : "image_picker",
        "id" : "pe_after_image" ,
        "label" : "Select After Image"
      }       
    ],
    "blocks" : [   
      {
        "name" : "pe-percent-details",
        "type" : "pe-percent-details",
        "settings" : [
          {
            "type" :"text",
            "id" : "pe-percent",
            "label" : "pe-percentage"
          },
          {
            "type" : "textarea",
            "id" : "pe-percent-det",
            "label" : "pe-percent-det"
          }
        ]       
      }    
    ],
    "templates": ["product"]
}
{% endschema %}
<script>
  if(document.querySelector("#rfss_pe")){new Glide("#rfss_pe",{type:"slider",bound:true,breakpoints:{0:{perView:1},300:{perView:1},600:{perView:1},800:{perView:1},1000:{perView:1}}}).mount();}
</script>
