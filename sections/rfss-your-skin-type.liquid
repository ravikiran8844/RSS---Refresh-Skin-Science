       <div class="glide" id="skin_type">
    <div class="glide__track" data-glide-el="track">
      <div class="glide__slides">
       {%- for block in section.blocks -%}
          <div class="glide__slide">   
        <div class="p-3">
         <a href="{{ block.settings.link }}">
          {%-liquid 
        assign img_url = block.settings.skintype_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.'
        assign ration = block.settings.skintype_image.aspect_ratio -%}
        <div class="lazyload__image-wrapper no-js header-logo__image imglazy"><div class="subgallery sub_img" style="padding-top:{{ 1 | divided_by: ration | times: 100}}%;"></div><noscript><img itemprop="image" class="lazy js" src="{{ block.settings.skintype_image | img_url}}" data-src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ ration }}" data-sizes="auto" alt="{{ block.settings.skintype_image.alt | default: shop.name | escape }}"></noscript></div>
         </a>
          <a href="{{ block.settings.link }}" class="d-block  fw-bold mb-3 fs-6 mt-3 mt-5 skinlink">{{ block.settings.type_name }}</a>
           
        </div>
      </div>
      {%- endfor -%}
    </div>
