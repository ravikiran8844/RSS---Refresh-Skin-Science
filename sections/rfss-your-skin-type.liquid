<script>
  if(document.querySelector("#skin_type")){new Glide("#skin_type",{type:"slider",bound:true,perView:4,breakpoints:{0:{perView:1.5},300:{perView:1.5},600:{perView:1.5},800:{perView:2.5},1000:{perView:2.5}}}).mount();}
</script>
