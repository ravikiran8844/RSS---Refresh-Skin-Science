<script>
  document.querySelectorAll(".imglazy").forEach((l) =>
    new IntersectionObserver(function (e, o) {
        e.forEach(
            (t) =>
                t.isIntersecting &&
                (
                this.noscr = new DOMParser().parseFromString(t.target.querySelector("noscript").innerHTML.replace("&lt;", "<").replace("&gt;", ">"), "text/html").body.querySelector('img'),
                this.msrc = JSON.parse(this.noscr.getAttribute("data-widths")).map((e) => this.noscr.getAttribute("data-src").replace("{width}", e) + " " + e + "w"),
                t.target.querySelector(".sub_img").innerHTML = '<img class="js" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="'+this.noscr.getAttribute("data-aspectratio")+'" data-sizes="auto" alt="devpreno" sizes="'+t.target.clientWidth+'px" srcset="'+this.msrc+'">',
                o.unobserve(t.target))
        );
    }).observe(l)
  );
</script>   
