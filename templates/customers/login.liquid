<!-- /templates/customers/login.liquid -->
<div class="login_page">
    <div class="container">
    <div class="row align-items-center" style="height: 85vh;">
      <div class="col-md-6">
             <div id="login_form" class="login_form  col-12 col-md-11  col-lg-9">
               <h2 class="fs-2 mb-3">Login</h2>
               <p class="fs-5 fw-bold mb-5">Welcome to Refresh Skin Science!<br> Enter Your Login Details:</p>
                {% form 'customer_login' %}              
                {{ form.errors | default_errors }}
                <div class="mb-4 row">
                   <label for="customer_email" class="col-sm-4 col-form-label p-2">Email Address</label>
                <div class="col-sm-8">
                    <input type="email" name="customer[email]" class="w-100 p-2" />
                </div>
                </div>
                <div class="mb-4 row">               
                <label for="customer_password" class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input type="password" name="customer[password]" class="w-100 p-2" />
                </div>
                </div>
                
                <p id="forgot_pw" class="text-end" style="cursor: pointer;">Forgot your password?</p> 
                <hr class="mt-2 mb-4"></hr>
                <div class="mb-4">
                    <input type="submit" value="Sign In" class="bg-black btn float-end text-white w-50 p-2"/>          
               </div>
                {% endform %}
               <div class="clearfix d-block pt-5"></div>
               <div class="text-center ">
                  <a href="/account/register" class="rfss-black product_a text-decoration-none"><p class="mt-4">New to Refresh Skin Science? <span class="fw-bold text-capitalize">sign up now!</span></p></a>
               </div>
                
             </div>
             <div id="forgot_form" class="login_form col-12 col-md-11  col-lg-9  forget_pass" style="display:none">
               <h2 class="mb-2 fs-2">Forgot Password</h2>
                 <p class="mb-4">We will send you an email to reset your password.</p>             
                {% form 'recover_customer_password' %}
                
                {{ form.errors | default_errors }}
                <div class="mb-4 row"> 
                    <label for="customer_email"  class="col-sm-4 fs-2col-form-label">Email Address</label>
                    <div class="col-sm-8">
                        <input type="email" name="email" class="p-2 w-100"/>
                    </div>
                </div>                        
                <input type="submit" value="Submit" class="bg-black btn float-end text-white w-50 p-2" />
                <p id="fp_cancel" class="bg-light btn p-2 mt-1">Cancel</p>
                {% endform %}
             </div>
        
      </div> 
      <div class="col-md-6 text-center">
        
      </div>
    </div>
    </div>
  </div>
  
  <script>
    $(document).ready(function(){
      $('#forgot_pw').click(function(){
         $('#forgot_form').show();
         $('#login_form').hide();
      });
       $('#fp_cancel').click(function(){
         $('#forgot_form').hide();
         $('#login_form').show();
      });
    });
  </script>
  
  
  
  